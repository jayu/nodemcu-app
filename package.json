{
  "name": "nodemcu-app",
  "version": "0.1.0",
  "description": "A set of tools for effective NodeMCU development",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "files": [
    "dist"
  ],
  "author": "Jakub Mazurek @jayu",
  "homepage": "https://github.com/jayu/nodemcu-app#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/jayu/nodemcu-app"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "node dist",
    "lint": "eslint --ext .js,.ts src",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --check src README.md",
    "format:fix": "prettier --write src README.md",
    "typecheck": "tsc --noEmit",
    "checks": "yarn lint && yarn format && yarn typecheck",
    "release": "release-it",
    "_postinstall": "husky install",
    "prepublish": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/node": "^14.14.7",
    "@types/serialport": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^5.0.0-beta.0",
    "pinst": "^2.1.1",
    "prettier": "^2.1.2",
    "release-it": "^14.2.1",
    "serialport": "^9.0.2",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "colorette": "^1.2.1",
    "commander": "^6.2.0",
    "dedent": "^0.7.0"
  }
}
